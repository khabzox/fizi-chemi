{
  "builds": [
    {
      "src": "packages/nextjs-app/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "packages/astro-app/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/packages/astro-app/dist/$1",
      "continue": true
    },
    {
      "src": "/nextjs/(.*)",
      "dest": "/packages/nextjs-app/$1",
      "continue": true
    }
  ]
}
